<form action="/prehistoric_creatures/<%=creatureId%>/?_method=PUT" method="POST">

    <label for="creatureType">Type:</label>
    <input type="text" name="type" id="creatureType" value="<%=creature.type%>">

    <label for="creatureName">Image URL:</label>
    <input type="text" name="name" id="creatureName" value="<%=creature.img_url%>">    


<button type="submit">Update this Creature!</button>
</form>